        <Label x:Name="lblBankName" Content="BankName" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="12,110,0,0" VerticalAlignment="Top" Width="70"/>
        <Label x:Name="lblIBAN" Content="IBAN" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="12,138,0,0" Width="70" VerticalAlignment="Top"/>
        <Label x:Name="lblBIC" Content="BIC" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="312,110,0,0" VerticalAlignment="Top" Width="30"/>
        <Label x:Name="lblSteuerNr" Content="SteuerNr" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="287,79,0,0" VerticalAlignment="Top" Width="57"/>

        <Windows:Adresse x:Name="addAddress" HorizontalAlignment="Left" Height="75" Margin="0,218,0,0" VerticalAlignment="Top" Width="449"/>
        <TextBox x:Name="txtVorname" HorizontalAlignment="Left" Margin="82,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <TextBox x:Name="txtFirma" HorizontalAlignment="Left" Margin="82,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="82,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" InputScope="EmailUserName"/>
        <TextBox x:Name="txtBank" HorizontalAlignment="Left" Margin="82,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <TextBox x:Name="txtSteuerNr" HorizontalAlignment="Left" Margin="342,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <TextBox x:Name="txtIBAN" HorizontalAlignment="Left" Margin="82,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="455"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="342,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <TextBox x:Name="txtTelefone" HorizontalAlignment="Left" Margin="342,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" InputScope="TelephoneNumber"/>
        <TextBox x:Name="txtBIC" HorizontalAlignment="Left" Margin="342,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <Button x:Name="btnSave" Content="Speichern" HorizontalAlignment="Left" Margin="454,238,0,0" VerticalAlignment="Top" Width="83" Height="35" Click="btnSave_Click"/>
        <Label x:Name="lblWeb" Content="Web" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="12,164,0,0" Width="70" VerticalAlignment="Top"/>
        <TextBox x:Name="txtWeb" HorizontalAlignment="Left" Margin="82,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="455"/>
        <Label x:Name="lblLogoPath" Content="Logo(jpg)" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="12,187,0,0" Width="70" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLogoPath" HorizontalAlignment="Left" Margin="82,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="455"/>
