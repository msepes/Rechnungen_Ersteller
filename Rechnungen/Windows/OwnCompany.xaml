        Title="Eigene Firma" Height="321" Width="558" Icon="/logo.jpg">
    <Grid x:Name="gGrid" Height="299" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="93*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblVorname" Content="Vorname" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="12,16,0,0" VerticalAlignment="Top" Width="70"/>
        <Label x:Name="lblName" Content="Name" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="288,16,0,0" VerticalAlignment="Top" Width="56"/>
        <Label x:Name="lblFirma" Content="Firma" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="12,48,0,0" VerticalAlignment="Top" Width="70"/>
        <Label x:Name="lblTelefone" Content="Telefone" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="287,48,0,0" VerticalAlignment="Top" Width="57"/>
