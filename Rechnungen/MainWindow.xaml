        <Button x:Name="OwnCompany" Content="Eigene Firma" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" VerticalAlignment="Top" Width="118" Click="OwnCompany_Click"/>
        <Button x:Name="Clients" Content="Kunden" HorizontalAlignment="Left" Height="39" Margin="10,54,0,0" VerticalAlignment="Top" Width="118" Click="Clients_Click"/>
        <Button x:Name="Bills" Content="Alle Rechnungen" HorizontalAlignment="Left" Height="39" Margin="10,98,0,0" VerticalAlignment="Top" Width="118" Click="Bills_Click"/>
        <Button x:Name="Offers" Content="Alle Angebote" HorizontalAlignment="Left" Height="39" Margin="10,142,0,0" VerticalAlignment="Top" Width="118" Click="Offers_Click"/>
        <Button x:Name="Rabatt" Content="Rabatt" HorizontalAlignment="Left" Height="39" Margin="10,186,0,0" VerticalAlignment="Top" Width="118" Click="Rabatt_Click"/>

    </Grid>
</Window>
